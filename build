#!/bin/sh

MUFFINS_PACKAGE=github.com/coreos/muffins
export GOPATH="${PWD}"
SRC_DIR="$GOPATH/src"
MUFFINS_DIR="$SRC_DIR/$MUFFINS_PACKAGE"

MUFFINS_BASE=$(dirname "${MUFFINS_DIR}")
if [ ! -d "${MUFFINS_BASE}" ]; then
	mkdir -p "${MUFFINS_BASE}"
fi

if [ ! -h "${MUFFINS_DIR}" ]; then
	ln -s ../../../ "${MUFFINS_DIR}"
fi

for i in third_party/*; do
	if [ "$i" = "third_party/src" ]; then
		continue
	fi
	cp -R "$i" src/
done

go build "${MUFFINS_PACKAGE}"
